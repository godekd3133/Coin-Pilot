# ============================================
# Coin Pilot - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ============================================
# UPBIT API CREDENTIALS (Required for trading)
# ============================================
# Get your API keys from: https://upbit.com/mypage/open_api_management
# WARNING: Never commit your actual API keys to version control!

UPBIT_ACCESS_KEY=your_access_key_here
UPBIT_SECRET_KEY=your_secret_key_here

# ============================================
# TRADING MODE
# ============================================
# true  = Paper trading (simulated, no real money)
# false = Live trading (real money, use with caution!)

DRY_RUN=true

# ============================================
# TARGET COINS
# ============================================
# Comma-separated list of coins to trade
# Use "ALL" to analyze all KRW market coins (230+)
# Examples:
#   TARGET_COINS=KRW-BTC,KRW-ETH,KRW-XRP
#   TARGET_COINS=ALL

TARGET_COINS=ALL

# ============================================
# PORTFOLIO SETTINGS
# ============================================
# Maximum number of simultaneous positions
MAX_POSITIONS=1000

# Maximum allocation per coin (0.3 = 30%)
PORTFOLIO_ALLOCATION=0.3

# Investment ratio per trade (0.05 = 5% of total assets)
INVESTMENT_RATIO=0.05

# ============================================
# DRY RUN SETTINGS
# ============================================
# Starting seed money for paper trading (KRW)
DRY_RUN_SEED_MONEY=10000000

# Check interval in milliseconds (30000 = 30 seconds)
CHECK_INTERVAL_DRY=30000

# ============================================
# LIVE TRADING SETTINGS
# ============================================
# Check interval for live trading (60000 = 1 minute)
CHECK_INTERVAL_LIVE=60000

# ============================================
# RISK MANAGEMENT
# ============================================
# Stop loss percentage (5 = 5%)
STOP_LOSS_PERCENT=5

# Take profit percentage (10 = 10%)
TAKE_PROFIT_PERCENT=10

# ============================================
# TECHNICAL INDICATORS
# ============================================
# RSI Settings
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# Signal thresholds (higher = more conservative)
BUY_THRESHOLD=55
SELL_THRESHOLD=55

# Weight distribution (must sum to 1.0)
TECHNICAL_WEIGHT=0.6
NEWS_WEIGHT=0.4

# ============================================
# OPTIMIZATION SETTINGS
# ============================================
# Days of historical data for optimization
OPTIMIZATION_DAYS=60

# Optimization interval (milliseconds)
# Live: 86400000 (24 hours)
# Dry:  21600000 (6 hours)
OPTIMIZATION_INTERVAL=86400000
OPTIMIZATION_INTERVAL_DRY=21600000

# Genetic algorithm settings
POPULATION_SIZE=20
GENERATIONS=10

# ============================================
# BACKTESTING SETTINGS
# ============================================
# Backtest interval in milliseconds (3600000 = 1 hour)
BACKTEST_INTERVAL=3600000

# Days of data for backtesting
BACKTEST_DAYS=30

# ============================================
# SERVER SETTINGS
# ============================================
# Dashboard port
PORT=3000

# ============================================
# LOGGING
# ============================================
# Log level: debug, info, warn, error
LOG_LEVEL=info
